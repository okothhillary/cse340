<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>

            <% if (errors && errors.length> 0) { %>
                <ul class="notice">
                    <% errors.forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>



                    <div class="add-inventory">
                        <h2>Modify Inventory</h2>

                        <form id="updateForm" action="/inv/update" method="post">
                            <div>
                                <label for="inv_make">Make:</label>
                                <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make || '' %>">
                            </div>
                            <div>
                                <label for="inv_model">Model:</label>
                                <input type="text" id="inv_model" name="inv_model" required
                                    value="<%= inv_model || '' %>">
                            </div>
                            <div>
                                <label for="inv_year">Year:</label>
                                <input type="text" id="inv_year" name="inv_year" required pattern="\d{4}"
                                    title="Enter a 4-digit year" value="<%= inv_year || '' %>">
                            </div>
                            <div>
                                <label for="inv_description">Description:</label>
                                <textarea id="inv_description" name="inv_description"
                                    required><%= inv_description || '' %></textarea>
                            </div>
                            <div>
                                <label for="inv_image">Image Path:</label>
                                <input type="text" id="inv_image" name="inv_image" required
                                    value="<%= inv_image || '/images/no-image-available.png' %>">
                            </div>
                            <div>
                                <label for="inv_thumbnail">Thumbnail Path:</label>
                                <input type="text" id="inv_thumbnail" name="inv_thumbnail" required
                                    value="<%= inv_thumbnail || '/images/no-image-available-tn.png' %>">
                            </div>
                            <div>
                                <label for="inv_price">Price:</label>
                                <input type="number" id="inv_price" name="inv_price" required
                                    value="<%= inv_price || '' %>">
                            </div>
                            <div>
                                <label for="inv_miles">Miles:</label>
                                <input type="number" id="inv_miles" name="inv_miles" required
                                    value="<%= inv_miles || '' %>">
                            </div>
                            <div>
                                <label for="inv_colour">Colour:</label>
                                <input type="text" id="inv_colour" name="inv_colour" required
                                    value="<%= inv_colour || '' %>">
                            </div>
                            <div>
                                <label for="classificationList">Classification:</label>
                                <%- classificationList %>
                            </div>
                            <div>
                                <label for="inv_id">Inventory ID:</label>
                                <input type="hidden" name="inv_id" required value="<%= inv_id || '' %>" readonly>
                            </div>
                            <button type="submit" disabled>Modify Inventory Item</button>

                        </form>

                        <hr>
                        <a href="/inv">Back to Management</a>
                        <hr>

                    </div>

                    <script src="../../js/inv-update.js"></script>