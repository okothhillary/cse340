<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>

            <% if (errors && errors.length> 0) { %>
                <ul class="notice">
                    <% errors.forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <div class="add-inventory">
                        <p>Confirm Deletion - Deleting is permanent.</p>

                        <form id="deleteForm" action="/inv/delete/<%= inv_id %>" method="post">
                            <div>
                                <label for="inv_make">Make:</label>
                                <input type="text" id="inv_make" name="inv_make" required readonly value="<%= inv_make || '' %>">
                            </div>
                            <div>
                                <label for="inv_model">Model:</label>
                                <input type="text" id="inv_model" name="inv_model" required readonly value="<%= inv_model || '' %>">
                            </div>
                            <div>
                                <label for="inv_year">Year:</label>
                                <input type="text" id="inv_year" name="inv_year" required pattern="\d{4}" title="Enter a 4-digit year" readonly value="<%= inv_year || '' %>">
                            </div>
                            <div>
                                <label for="inv_price">Price:</label>
                                <input type="number" id="inv_price" name="inv_price" required readonly value="<%= inv_price || '' %>">
                            </div>
                            <input type="hidden" name="inv_id" value="<%= inv_id || '' %>">
                            <button type="submit">Delete</button>
                        </form>

                        <hr>
                        <a href="/inv">Back to Management</a>
                        <hr>
                    </div>
